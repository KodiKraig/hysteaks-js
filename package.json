{
  "name": "hysteaks-js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build:ethers-sdk": "npm run build -w @hysteaks-js/ethers-sdk",
    "build:reward-helpers": "npm run build -w @hysteaks-js/reward-helpers",
    "cli": "npm run start -w @hysteaks-js/cli",
    "test": "npm run test -w @hysteaks-js/reward-helpers && npm run test -w @hysteaks-js/contracts",
    "test:reward-helpers": "npm run test -w @hysteaks-js/reward-helpers",
    "test:contracts": "npm run test -w @hysteaks-js/contracts",
    "test:contracts:coverage": "npm run test:coverage -w @hysteaks-js/contracts"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"
  }
}
